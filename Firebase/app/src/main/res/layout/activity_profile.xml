<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adrian.firebase.Profile">
    <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#FFA500"
        android:elevation="4dp"
        app:title="User Profile"
        app:titleTextColor="#fff"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"></android.support.v7.widget.Toolbar>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="310dp"

        android:layout_marginTop="510dp"
        app:srcCompat="@android:drawable/ic_dialog_email" />


<ScrollView
    android:layout_width="wrap_content"
    android:id="@+id/scroll"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="1dp"
            android:layout_marginTop="200dp"
            android:src="@drawable/star"
            android:layout_marginLeft="320dp"
            android:id="@+id/star" />
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:elevation="1dp"
            android:layout_marginTop="145dp"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:text="Adrian,22"
            android:textSize="30sp" />



        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="10dp"
            android:elevation="1dp"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="less than a mile away" />

        <android.support.v7.widget.CardView

            android:layout_width="280dp"
            android:layout_height="120dp"

            android:layout_alignLeft="@+id/distance"
            android:layout_alignStart="@+id/distance"
            android:layout_below="@+id/distance"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"

                        android:background="@drawable/ic_email_black_24dp" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="adrianrabbitte@gmail.com" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"

                        android:background="@drawable/ic_local_phone_black_24dp" />

                    <TextView
                        android:id="@+id/number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="0877998929"></TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"

                        android:background="@drawable/ic_import_contacts_black_24dp" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Kilsarn Loughduff
Co Cavan"></TextView>


                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/image"
            android:layout_width="380dp"
            android:layout_height="228dp"
            app:srcCompat="@drawable/button_bg_pressed" />


        <android.support.v4.widget.Space
            android:layout_width="291dp"
            android:layout_height="95dp" />

        <View
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"


            android:background="#FFA500"></View>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Information"
            android:textColor="#696969"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"/>

        <android.support.v7.widget.CardView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"

                android:background="@drawable/ic_accessibility_black_24dp"/>

            <TextView
                android:id="@+id/personal"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:text="Kilsarn Loughduff
Co Cavan">

            </TextView>





        </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#696969"
            android:text="Employment Reference"
            android:layout_marginLeft="10dp"

            android:textStyle="bold"
            android:textSize="15sp"/>

        <android.support.v7.widget.CardView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"

                android:background="@drawable/ic_import_contacts_black_24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/previous"
                android:layout_marginLeft="10dp"

                android:text="Kilsarn Loughduff
Co Cavan">

            </TextView>




        </LinearLayout>
        </android.support.v7.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skills"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="#696969"
            android:textSize="15sp"/>

        <android.support.v7.widget.CardView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"

                android:background="@drawable/ic_import_contacts_black_24dp"/>


        </LinearLayout>


            <TextView
                android:id="@+id/skills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="39dp"
                android:layout_toEndOf="@+id/imageView3"
                android:layout_toRightOf="@+id/imageView3"
                android:layout_weight="1"
                android:text="Kilsarn Loughduff
    Co Cavan"></TextView>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    </RelativeLayout>
</ScrollView>





</RelativeLayout>