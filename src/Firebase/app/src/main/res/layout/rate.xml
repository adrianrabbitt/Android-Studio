<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:orientation="horizontal"
        >


        <TextView
            android:id="@+id/message_userC"
            android:layout_width="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:maxWidth="200dp"
            android:clickable="false"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"

            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center"
            android:textColor="#ffff"
            android:layout_toEndOf="@+id/message_user"
            android:textAllCaps="true"
            android:layout_toRightOf="@+id/message_user" />


        <TextView
            android:id="@+id/sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sender"
            android:layout_marginLeft="15dp"

            android:gravity="center"
            android:padding="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"




            android:textSize="19sp" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"


            android:layout_marginLeft="130dp"
            android:background="@drawable/menu"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <RatingBar
        android:id="@+id/rate"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginLeft="80dp"
        android:progressTint="#FFA500"

        android:scaleX=".6"


        android:scaleY=".6"
        android:stepSize="1"
        android:transformPivotX="0dp"


        android:transformPivotY="0dp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="10dp"

        android:gravity="center"
        android:padding="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"></TextView>
</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_marginLeft="80dp"
        android:id="@+id/message"/>
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />
</LinearLayout>

</RelativeLayout>