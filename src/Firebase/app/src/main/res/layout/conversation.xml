<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">
<ImageView
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:id="@+id/img"
    android:layout_marginLeft="305dp"
    android:layout_marginTop="50dp"
    android:src="@drawable/xbutton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:layout_marginLeft="275dp"
        android:layout_marginTop="16dp"
        android:text="5:26"/>
<LinearLayout

    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="95dp">



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:descendantFocusability="blocksDescendants"
        android:layout_marginTop="7dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">


        <TextView
            android:id="@+id/message_userCo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="19dp"

            android:layout_marginTop="10dp"
            android:layout_marginStart="19dp"
            android:layout_toEndOf="@+id/message_user"
            android:layout_toRightOf="@+id/message_user"
            android:background="@drawable/cir"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:maxWidth="200dp"
            android:text=""
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffff" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        <TextView
            android:id="@+id/message_EmailCo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_user"
            android:text="adrian@gmail.com"

            android:layout_marginLeft="5dp"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:padding="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"

            android:textColor="#000000"

            android:textSize="18sp" />







        <TextView
            android:id="@+id/message_messCo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_user"
            android:clickable="false"
            android:focusable="false"
            android:layout_marginLeft="7dp"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:textStyle="normal"
            android:padding="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text="hello how are u"
            android:textColor="#696969"

            android:textSize="18sp"

            tools:layout_editor_absoluteX="79dp"
            tools:layout_editor_absoluteY="49dp" />
</LinearLayout>
    </LinearLayout>




</LinearLayout>
</RelativeLayout>