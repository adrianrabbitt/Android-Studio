<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:windowSoftInputMode="adjustPan"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context="com.example.adrian.firebase.CV">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:background="#FFA500"
        android:elevation="4dp"

        app:title=""
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="CV"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </android.support.v7.widget.Toolbar>




    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="25dp"

        tools:layout_editor_absoluteY="194dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_gravity="top"
            android:background="#1d2228"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="16dp"

            android:paddingRight="16dp">





            <!-- Include other widget or layout tags here. These are considere     "child views" or "children" of the linear layout -->

        </LinearLayout>



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_centerVertical="true"


                android:background="#FFA500"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
              android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:id="@+id/name1"
                android:textSize="20dp"

                android:textColor="#000000"

                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="60dp"
                android:layout_centerVertical="true"


                android:background="#ffcc00"
                />


        </android.support.v7.widget.CardView>


    </RelativeLayout>
    <ImageView
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:id="@+id/image"
        android:layout_marginTop="50dp"
       android:layout_marginLeft="125dp"

        android:src="@drawable/image" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/pic"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="225dp"

        android:src="@drawable/ic_add_circle_outline_black_24dp" />



    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="373dp"
        android:layout_gravity="bottom"

        tools:layout_editor_absoluteY="194dp">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="41dp"

            android:layout_marginRight="41dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:isScrollContainer="false"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_weight="1"

                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Title"
                    android:id="@+id/titleN"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:layout_marginTop="0dp"
                    android:textSize="15sp"/>
                <Spinner
                    android:id="@+id/title"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/lblTitle"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:autofillHints=" Title"
                    android:background="@drawable/editext" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fname"
                    android:text="   First Name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#000"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/firstName"
                    android:layout_width="318dp"
                    android:layout_height="30dp"

                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView5"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/editext"
                    android:ems="10"
                    android:hint="@string/first_name"
                    android:inputType="textNoSuggestions"

                    android:textColorHint="#949494"
                    android:textSize="15dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Second Name"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:id="@+id/sname"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/secondName"
                    android:layout_width="318dp"
                    android:layout_height="30dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView5"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/editext"
                    android:ems="10"
                    android:hint="@string/second_name"
                    android:inputType="textNoSuggestions"

                    android:textColorHint="#949494"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Gender"
                    android:layout_marginTop="5dp"
                    android:textColor="#000"
                    android:textSize="15sp" />


                <Spinner
                    android:id="@+id/sex"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/lblTitle"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:autofillHints=" Gender"
                    android:background="@drawable/editext" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Job Type"
                    android:layout_marginTop="5dp"
                    android:textColor="#000"
                    android:textSize="15sp"/>

                <Spinner

                    android:id="@+id/jobs"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/lblTitle"

                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:autofillHints=" Jobs"
                    android:background="@drawable/editext" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   DOB"
                    android:layout_marginTop="5dp"
                    android:textColor="#000"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/date"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"

                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/editext"
                    android:gravity="center"
                    android:padding="15dp"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Email Address"
                    android:textColor="#000"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"/>


                <EditText
                    android:id="@+id/email"
                    android:layout_width="323dp"
                    android:layout_height="30dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView5"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/editext"
                    android:ems="10"
                    android:hint=" *Email"
                    android:inputType="textNoSuggestions"

                    android:textColorHint="#949494"
                    android:textSize="15dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Mobile Numbers"
                    android:layout_marginTop="5dp"
                    android:textColor="#000"
                    android:textSize="15sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <EditText
                        android:id="@+id/mobile"
                        android:layout_width="149dp"
                        android:layout_height="30dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView5"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/editext"
                        android:ems="10"
                        android:hint=" Mobile"
                        android:inputType="textNoSuggestions"

                        android:textColorHint="#949494"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="169dp"
                        android:layout_height="30dp"

                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView5"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/editext"
                        android:ems="10"
                        android:hint=" Mobile"
                        android:inputType="textNoSuggestions"

                        android:textColorHint="#949494"
                        android:textSize="15dp" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/address"
                    android:text="   Address"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/Address1"
                    android:layout_width="327dp"
                    android:layout_height="33dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/address"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/editext"
                    android:ems="10"
                    android:hint="@string/address1"
                    android:inputType="textNoSuggestions"

                    android:textColorHint="#949494"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/Address2"
                    android:layout_width="328dp"
                    android:layout_height="33dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView5"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/editext"
                    android:ems="10"
                    android:hint=" Address2"
                    android:inputType="textNoSuggestions"

                    android:textColorHint="#949494"
                    android:textSize="15dp" />







                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"

                    android:id="@+id/per"
                    android:text="   Personal Description"
                    android:textSize="15sp" />
                <EditText

                    android:id="@+id/Info"
                    android:layout_width="328dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_height="150dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView5"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/editext"
                    android:ems="10"
                    android:gravity="top|left"
                    android:hint="@string/info"
                    android:inputType="textMultiLine"
                    android:lines="8"
                    android:minLines="6"
                    android:scrollbars="vertical"
                    android:textColorHint="#949494"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textColor="#000"
                    android:id="@+id/job"
                    android:layout_marginLeft="10dp"
                    android:text="   Previous Expierence"
                    android:textSize="15sp" />

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="328dp"
                    android:layout_height="155dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/editext"
                    android:orientation="vertical"
                    android:scrollbars="horizontal">


                    <EditText
                        android:id="@+id/ptitle"
                        android:layout_width="156dp"
                        android:layout_height="39dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView5"
                        android:layout_marginLeft="10dp"

                        android:layout_marginTop="5dp"
                        android:background="@drawable/editext"
                        android:ems="10"
                        android:gravity="top|left"
                        android:hint="Job Title"
                        android:inputType="textMultiLine"
                        android:lines="8"
                        android:minLines="6"
                        android:scrollbars="vertical"
                        android:textColorHint="#949494"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/pdescription"
                        android:layout_width="280dp"
                        android:layout_height="96dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView5"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/editext"
                        android:ems="10"
                        android:gravity="top|left"
                        android:hint=" Description"
                        android:inputType="textMultiLine"
                        android:lines="8"
                        android:minLines="6"
                        android:scrollbars="vertical"
                        android:textColorHint="#949494"
                        android:textSize="15dp" />


                </android.support.v7.widget.LinearLayoutCompat>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/skill"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#000"
                    android:text="   Personal Skills"
                    android:textSize="15sp" />

                <EditText

                    android:id="@+id/skills"
                    android:layout_width="339dp"
                    android:layout_height="150dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView5"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/editext"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:ems="10"
                    android:gravity="top|left"
                    android:hint="@string/skills"
                    android:inputType="textMultiLine"
                    android:lines="8"
                    android:minLines="6"
                    android:scrollbars="vertical"
                    android:textColorHint="#949494"
                    android:textSize="15dp" />



                <Button
                    android:id="@+id/submit"

                    android:layout_width="300dp"
                    android:background="@drawable/save"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:text="Save"
                    android:textColor="#fff"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/ic_send_black_24dp" />


            </LinearLayout>
        </ScrollView>

    </RelativeLayout>












</android.support.design.widget.CoordinatorLayout>

